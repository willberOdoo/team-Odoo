<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="invoice_view_form_inherit">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after"> <field name="control_number" /> </xpath>
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_withholdings" type="object" class="oe_stat_button" icon="fa-meh-o">
                            <div class="o_stat_info">
                                <field name="withholdings_counter" class="o_stat_value"/>
                                <field name="id" class="o_stat_value"/>
                                <span class="o_stat_text"> Retenciones </span>
                            </div>
                        </button>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>